  <script>
    // Backend API URL prefix - update if different in deployment
    const API_BASE = 'http://localhost:3000';

    // Certificate verification
    const verifyForm = document.getElementById('verify-form');
    const verificationResult = document.getElementById('verification-result');

    verifyForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const certId = document.getElementById('cert-id').value.trim();
      if (!certId) {
        verificationResult.textContent = 'Please enter a certificate ID.';
        verificationResult.style.color = 'red';
        return;
      }
      verificationResult.textContent = 'Verifying...';
      verificationResult.style.color = '#2980b9';

      try {
        const response = await fetch(`${API_BASE}/verify-certificate`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ certId })
        });
        const data = await response.json();
        if(data.success && data.valid){
          verificationResult.style.color = '#4CAF50';
          verificationResult.textContent = data.message;
        } else if (data.success) {
          verificationResult.style.color = '#d63c5d';
          verificationResult.textContent = data.message;
        } else {
          verificationResult.style.color = 'red';
          verificationResult.textContent = 'Error verifying certificate.';
        }
      } catch (error) {
        verificationResult.style.color = 'red';
        verificationResult.textContent = 'Network error. Please try again later.';
      }
    });

    // Enrollment form submission
    const enrollForm = document.getElementById('enroll-form');
    const enrollResult = document.getElementById('enroll-result');

    enrollForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = {
        name: enrollForm.name.value.trim(),
        email: enrollForm.email.value.trim(),
        phone: enrollForm.phone.value.trim(),
        course: enrollForm.course.value,
        message: enrollForm.message.value.trim()
      };

      if(!formData.name || !formData.email || !formData.phone || !formData.course) {
        enrollResult.style.color = 'red';
        enrollResult.textContent = 'Please fill in all required fields.';
        return;
      }

      enrollResult.style.color = '#2980b9';
      enrollResult.textContent = 'Submitting enrollment...';

      try {
        const response = await fetch(`${API_BASE}/enroll`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });
        const data = await response.json();
        if(data.success){
          enrollResult.style.color = '#4CAF50';
          enrollResult.textContent = data.message;
          enrollForm.reset();
        } else {
          enrollResult.style.color = 'red';
          enrollResult.textContent = data.message || 'Error submitting enrollment.';
        }
      } catch (error) {
        enrollResult.style.color = 'red';
        enrollResult.textContent = 'Network error. Please try again later.';
      }
    });
  </script>
